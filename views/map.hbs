    <!-- Funcionalidad de twitter -->
    <script>
        (function () {
            $('#twitter').on('click', function() {
                var isHidden = $('.twitter-slider').hasClass("oculto");
                if(isHidden) {
                    var mobileNav = $('.twitter-slider');
                    mobileNav.toggleClass('oculto mostrar');
                } else {
                    socket.emit('toggletwitter',{show:false});
                }
            })
        })();
    </script>
    
    <!-- OWL Carousel -->
    <script>
        var last = 0;
        $('#carouselmain').owlCarousel({
            margin:10,
            dots: true,
            responsive:{
                0:{
                    items:1
                },
                100:{
                    items:1
                },
                1920:{
                    items:1
                }
            },
            onDragged: function(event) {
                if(event.item.index==last&&event.item.index==event.item.count-1) {
                    socket.emit('toggletwitter',{show:false});
                    setTimeout(function() {
                        $('.owl-carousel').trigger('to.owl.carousel', 0);
                        last = 0;
                    },1000);
                }
                last = event.item.index;
            }
        })
    </script>

